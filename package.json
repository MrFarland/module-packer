{
  "name": "module-packer",
  "version": "0.9.2",
  "description": "EncounterPlus Module Packer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build-mac": "electron-builder build --mac",
    "build-linux": "electron-builder build --linux",
    "build-win": "electron-builder build --win",
    "build-all": "electron-builder -mwl",
    "publish": "electron-builder build -p always"
  },
  "icon": "build/icon.icns",
  "build": {
    "appId": "com.jjohnston.modulepacker",
    "mac": {
      "category": "public.app-category.utilities",
      "identity": "UMJUH72CLG",
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.plist",
      "entitlementsInherit": "./build/entitlements.mac.plist",
      "target": [
        "dmg"
      ]
    },
    "asar": true,
    "extraResources": [
      "resources/**/*"
    ]
  },
  "publish": {
    "provider": "github",
    "owner": "encounterplus",
    "repo": "imodule-packer"
  },
  "repository": "https://github.com/encounterplus/module-packer",
  "keywords": [
    "EncounterPlus",
    "iOS",
    "module",
    "packer"
  ],
  "author": "QBIT, s.r.o",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^6.1.9",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "archiver": "^3.1.1",
    "bootstrap": "^4.4.1",
    "cheerio": "^1.0.0-rc.3",
    "electron-log": "^3.0.9",
    "electron-reload": "^1.5.0",
    "front-matter": "^3.1.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "jquery": "^3.4.1",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.7",
    "markdown-it-attrs": "^3.0.2",
    "markdown-it-imsize": "^2.0.1",
    "node-uuid": "^1.4.8",
    "popper.js": "^1.16.1",
    "slugify": "^1.4.0",
    "uuid": "^3.4.0",
    "xml2js": "^0.4.23",
    "yargs": "^13.3.2"
  }
}
